{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@design-system/*": ["./design-system/*"]
    }
  },
  "include": [
    "src",
    "src/test/vitest.d.ts",
    "src/types/**/*.d.ts",
    "*.d.ts",
    "*.ts",
    "vite.config.ts",
    "design-system/**/*.ts",
    "design-system/**/*.tsx",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "coverage",
    "storybook-static",
    "src/lib/kyc-native.ts",
    "**/*.stories.tsx"
  ]
}
