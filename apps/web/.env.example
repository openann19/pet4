# PetSpark Web Application Environment Variables
# 
# Copy this file to .env and fill in the values for your environment.
# Never commit .env to version control - it may contain sensitive secrets.

# API Configuration (Required)
# Production: Must be HTTPS URL (e.g., https://api.petspark.com)
# Development: Can be HTTP for local development (e.g., http://localhost:3000)
VITE_API_URL=https://api.dev-petspark.test

# WebSocket Configuration (Optional)
# Production: Must be WSS URL (e.g., wss://ws.petspark.com)
# Development: Can be WS for local development (e.g., ws://localhost:3001)
VITE_WS_URL=wss://ws.dev-petspark.test

# API Timeout (Optional, default: 30000ms)
# Maximum time in milliseconds to wait for API responses
VITE_API_TIMEOUT=30000

# Mock Mode (Optional, default: false)
# Set to 'true' to use mock data instead of real API calls
# WARNING: Only use in development/testing - never in production
VITE_USE_MOCKS=false

# Maps Configuration (Optional)
# Set to 'true' to enable map features (requires VITE_MAPBOX_TOKEN)
VITE_ENABLE_MAPS=false

# Mapbox Token (Optional, required if VITE_ENABLE_MAPS=true)
# Get your token from https://account.mapbox.com/access-tokens/
# This is a PUBLIC token safe to expose in client-side code
VITE_MAPBOX_TOKEN=

# Sentry Error Tracking (Optional)
# Set to your Sentry DSN to enable error tracking
# Get your DSN from https://sentry.io/settings/[org]/projects/[project]/keys/
VITE_SENTRY_DSN=

# Environment Mode (Automatically set by Vite)
# NODE_ENV=production (set by build process)
# VITE_ENV=development|staging|production (optional, for custom environment detection)

# ============================================================================
# Server-Only Secrets (NOT used in web client)
# ============================================================================
# These secrets should NEVER be set in web client .env files.
# They must be configured in backend runtime environment only:
#
# - JWT_SECRET: Secret key for signing JWTs
# - JWT_REFRESH_SECRET: Secret key for signing refresh tokens
# - STRIPE_SECRET_KEY: Stripe API secret key
# - STRIPE_WEBHOOK_SECRET: Stripe webhook signing secret
# - DATABASE_URL: PostgreSQL connection string
# - REDIS_URL: Redis connection string
# - AWS_ACCESS_KEY_ID: AWS credentials for S3/file storage
# - AWS_SECRET_ACCESS_KEY: AWS secret key
#
# These are configured server-side in:
# - Backend .env files (never committed)
# - CI/CD environment variables
# - Cloud provider secrets management (AWS Secrets Manager, etc.)
