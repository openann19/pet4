# Web Client Environment Variables
# Copy this file to .env.local (development) or .env (production build overrides)

# Core API configuration
VITE_API_URL=https://api.petspark.app/api
VITE_WS_URL=wss://api.petspark.app/ws
VITE_API_TIMEOUT=30000

# Mock toggle (must be false in production)
VITE_USE_MOCKS=false

# Feature flags (all default to true when omitted)
# VITE_ENABLE_KYC=true
# VITE_ENABLE_PAYMENTS=true
# VITE_ENABLE_LIVE_STREAMING=true

# Optional public service tokens
# VITE_MAPBOX_TOKEN=pk.your-public-mapbox-token
# VITE_STRIPE_PUBLIC_KEY=pk_live_your_public_key
# VITE_SENTRY_DSN=https://example.ingest.sentry.io/12345
# VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# Security hardening
# VITE_CSP_ENABLED=true
# VITE_CORS_ORIGIN=https://app.petspark.app

# Metadata
# VITE_APP_VERSION=1.0.0
# VITE_ENVIRONMENT=development
