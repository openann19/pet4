{
  "name": "@petspark/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --ext .ts --max-warnings=0 --fix",
    "test": "vitest",
    "test:run": "vitest run --passWithNoTests",
    "test:cov": "vitest run --coverage"
  },
  "dependencies": {
    "@petspark/shared": "workspace:*",
    "@prisma/client": "6.19.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.13.5",
    "@types/pg": "^8.15.6",
    "@vitest/coverage-v8": "^4.0.6",
    "prisma": "^6.0.0",
    "tsx": "^4.20.6",
    "typescript": "~5.7.2",
    "vitest": "^4.0.6"
  }
}
