#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run TypeScript type checking
echo "ğŸ” Running TypeScript type check..."
pnpm typecheck || {
  echo "âŒ TypeScript errors found. Please fix before committing."
  exit 1
}

# Run ESLint
echo "ğŸ” Running ESLint..."
pnpm lint || {
  echo "âŒ ESLint errors found. Please fix before committing."
  exit 1
}

# Run Prettier check
echo "ğŸ” Running Prettier check..."
pnpm prettier --check . || {
  echo "âŒ Prettier formatting issues found. Run 'pnpm prettier --write .' to fix."
  exit 1
}

echo "âœ… All pre-commit checks passed!"

