{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "moduleSuffixes": [".native", ""],
    "paths": {
      "@/*": ["./src/*"],
      "@mobile/*": ["./src/*"]
    },
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": [
    "node_modules",
    "dist",
    ".expo",
    "e2e",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "src/test/setup.ts"
  ]
}
