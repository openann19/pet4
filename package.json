{
  "name": "petspark-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "install:all": "pnpm install",
    "typecheck": "pnpm --filter './apps/*' --filter './packages/*' typecheck",
    "tsc:web": "pnpm --filter spark-template typecheck",
    "tsc:mobile": "pnpm --filter petspark-mobile typecheck",
    "lint": "pnpm --filter './apps/*' --filter './packages/*' lint",
    "test": "pnpm --filter './apps/*' --filter './packages/*' test:run",
    "verify:react-isolation": "bash scripts/verify-react-isolation.sh",
    "ci": "pnpm tsc:web && pnpm tsc:mobile && pnpm lint && pnpm test && pnpm --filter petspark-mobile verify:ultra && pnpm --filter petspark-mobile verify:parity && pnpm --filter petspark-mobile verify:budget",
    "mobile-start": "pnpm --filter petspark-mobile start",
    "mobile-android": "pnpm --filter petspark-mobile android",
    "mobile-ios": "pnpm --filter petspark-mobile ios",
    "web-dev": "pnpm --filter spark-template dev"
  },
  "devDependencies": {
    "typescript": "~5.7.2"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "dependencies": {
    "zod": "^3.25.76"
  }
}
