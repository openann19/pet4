{
  "name": "pet3-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install --legacy-peer-deps",
    "mobile:build:eas": "cd apps/native && eas build --platform all --profile production",
    "mobile:build:android": "cd apps/native && eas build --platform android --profile production",
    "mobile:build:ios": "cd apps/native && eas build --platform ios --profile production",
    "mobile:start": "cd apps/native && npm start",
    "web:dev": "cd apps/web && npm run dev",
    "shared:build": "cd packages/shared && npm run build",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "postinstall": "cd packages/shared && npm install && npm run build"
  },
  "devDependencies": {
    "@expo/metro-config": "^0.18.11",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.11.0",
    "eas-cli": "^12.5.0",
    "expo": "^51.0.39",
    "nativewind": "^4.1.23",
    "react-native-gesture-handler": "^2.29.1",
    "react-native-reanimated": "^3.19.3",
    "react-native-safe-area-context": "^4.14.0",
    "react-native-screens": "^4.4.0",
    "react-native-web": "^0.19.13",
    "tailwindcss": "^3.4.17"
  }
}
