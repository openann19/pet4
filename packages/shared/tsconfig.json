{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist/types",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "types": ["react"],
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "typeRoots": ["./node_modules/@types", "../motion/src/types"]
  },
  "include": ["src/**/*", "../motion/src/types/**/*.d.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts", "src/**/*.test.tsx", "src/**/__tests__/**/*"]
}
