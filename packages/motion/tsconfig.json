{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "noEmit": true,
    "outDir": "./dist",
    "moduleResolution": "Bundler",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "types": [
      "react",
      "react-native",
      "react-native-reanimated",
      "vitest/globals"
    ],
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "vitest.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
