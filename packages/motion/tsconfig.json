{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "noEmit": true,
    "outDir": "./dist",
    "moduleResolution": "Bundler",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "types": [
      "react",
      "react-native",
      "react-native-reanimated",
      "vitest/globals"
    ],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/core/guards": ["../shared/src/guards.ts"],
      "@/core/logger": ["../shared/src/logger.ts"],
      "@petspark/shared": ["../shared/src/index.ts"]
    }
  },
  "include": [
    "src/**/*",
    "vitest.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**",
    "**/__stories__/**"
  ]
}
