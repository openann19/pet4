{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2022"],
    "jsx": "react-jsx",
    "types": ["react"],
    "typeRoots": ["./node_modules/@types", "./types", "./src/types"]
  },
  "include": ["src/**/*", "src/types/**/*.d.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx", "src/test/**"]
}
